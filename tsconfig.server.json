{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./server",
    "outDir": "./dist/server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "auto",
    "target": "ES2020",
    "declaration": false,
    "sourceMap": false,
    "allowJs": false,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["server"]
}
